.banner
  position: relative;
  margin: 7em 0
  width: 100vw
  margin-left: 50%
  transform translateX(-50%)
  //background: #000;
  background-position: 50% 50%;
  background-size: cover
  color: #ffffff
  padding: 20px 0
  min-height 315px
  display: flex;
  align-items center
  @media (max-width: $breakpoint-lg)
    width: auto;
    transform none
    margin-left: -10px
    margin-right: -10px
  @media (max-width: $breakpoint-sm)
    margin: 3em -20px
    padding: 50px 0

  &:before
    content: ''
    position: absolute;
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: #1a1a1a
    opacity: .75

  &__row
    position: relative;
    z-index: 1
    display: flex;
    padding-right: 100px
    align-items center
    @media (max-width: $breakpoint-sm)
      flex-direction column
      justify-content center
      text-align: center;
      padding-right: 20px

  &__content
    flex: 1

  &__aside
    margin-left: 100px
    flex-shrink 0
    @media (max-width: $breakpoint-sm)
      margin-left: 0
      //margin-top: 20px

    .btn
      margin-bottom: 15px

  &__label
    margin-bottom: 15px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 20px

  &__title
    font-size: 50px
    @media (max-width: $breakpoint-sm)
      font-size: 33px
      margin-bottom: 20px
