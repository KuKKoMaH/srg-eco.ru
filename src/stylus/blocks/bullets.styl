.bullets
  display: flex;
  flex-wrap wrap
  margin: 1.5em -10px
  @media (max-width: $breakpoint-sm)
    font-size: 1.1em
    margin-left: 0
    margin-right: 0

  &--column
    margin-left: 0
    margin-right: 0

    & ^[0]__item
      width: 100%
      padding: 5px 0px

  &__item
    width: 50%
    padding: 10px
    @media (max-width: $breakpoint-sm)
      width: 100%
      padding: 0 0 5px 0

  &__content
    height: 100%
    background: #eeeeee
    display: flex;
    align-items center
    padding: 25px 35px
    @media (max-width: $breakpoint-sm)
      padding: 20px

  &__image
    margin-right: 25px
    max-width 60px
    max-height 60px
    width: auto;
    height: auto;
    @media (max-width: $breakpoint-sm)
      max-width 40px
      max-height 40px
      margin-right: 15px

  b
    font-weight: 600
    color: #00b2e0

  p
    margin: 0
    @media (max-width: $breakpoint-sm)
      margin: 0


