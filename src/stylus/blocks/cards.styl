.cards
  display: flex;
  flex-wrap wrap
  margin: 2em -10px
  @media (max-width: $breakpoint-sm)
    margin-left: 0
    margin-right: 0

  &__item
    width: 33.3333%
    padding: 10px
    @media (max-width: $breakpoint-sm)
      width: 100%
      padding: 0 0 5px 0

  &__content
    border: 1px solid #e8e8e8
    text-align: center;
    padding: 40px 20px
    height: 100%
    @media (max-width: $breakpoint-sm)
      padding: 25px 20px 20px

  &__image
    display: block;
    margin: 0 auto 30px
    max-width 60px
    max-height 60px
    width: auto;
    height: auto;
    @media (max-width: $breakpoint-sm)
      max-width 40px
      max-height: 40px
      margin-bottom: 15px

  &__text
    //font-size: 1.15em
    //@media (max-width: $breakpoint-sm)
    //  font-size: 1em

    & p
      margin: 0
      @media (max-width: $breakpoint-sm)
        margin: 0
