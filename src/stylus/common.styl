.wp-block-image img
  height: auto;

.nav {
  &__button {
    pointer-events all
    position: absolute;
    top: 50%
    transform translateY(-50%)
    width: 40px
    height: 40px
    display: flex;
    align-items center
    justify-content center
    anim()

    &--prev {
      right: 100%
      @media (max-width: $breakpoint-sm) {
        margin-right: -20px
      }
    }

    &--next {
      left: 100%
      transform rotate(180deg) translateY(50%)
      @media (max-width: $breakpoint-sm) {
        margin-left: -20px
      }
    }

    &.swiper-button-disabled {
      opacity: 0
    }

    svg {
      width: 18px
      height: 18px
      fill: $blue
    }
  }

  &__pagination {
    display: flex;
    flex-wrap wrap
    align-items center
    justify-content center
    margin-top: (45 - 10) px
    margin-bottom: -10px
    @media (max-width: $breakpoint-sm) {
      margin-top: (45 - 7) px
      margin-bottom: -7px
    }

    .swiper-pagination-bullet {
      position: relative;
      width: 18px
      height: 18px
      border: 1px solid $blue;
      display: flex;
      align-items center
      justify-content center
      border-radius: 0
      background: transparent;
      opacity: 1
      margin: 4px 8px
      anim()
      //@media (max-width: $breakpoint-sm) {
      //  width: 24px
      //  height: 24px
      //  margin: 7px
      //}

      &:before {
        content ''
        width: 8px
        height: 8px
        background: $blue;
        anim()
        //@media (max-width: $breakpoint-sm) {
        //  width: 12px
        //  height: 12px
        //}
      }

      &.swiper-pagination-bullet-active {
        background: $blue;

        &:before {
          background: $white;
        }
      }
    }
  }
}

.loading {
  position: relative;

  &:before, &:after {
    content: '';
    display: block;
    position: absolute;
    left: 0
    top: 0
    width: 100%
    height: 100%
    z-index: 1
  }

  &:before {
    background: #fff;
    opacity: .5
  }

  &:after {
    background: url(../modules/photoswipe/preloader.gif) 50% 50% no-repeat;
  }
}


