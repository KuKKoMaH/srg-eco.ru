.bigBtn
  display: inline-flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  position: relative
  background: $blue
  height: 49px
  margin-top: 2px
  width: 100%
  color: $white
  padding: 0 50px
  font-weight: 600
  letter-spacing: 1px
  padding-bottom: 5px
  //border-bottom: 5px solid #49a6be
  anim()

  &:hover
    padding-top: 2px
    color: $white

    &:before
      height: 0

    &:after
      height: 3px
  @media (max-width: $breakpoint-md)
    padding: 0
    height: 60px
    font-size: 11px

  &:before,
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    width: 100%
    height: 10px
    anim()

  &:before
    bottom: 100%
    height: 2px
    background: $blue

  &:after
    bottom: 0
    height: 5px
    background: #49a6be

  &--white
    background: #ffffff
    color: #50bfdb

    &:after
      background: #d3eff6

    &:hover
      color: #50bfdb

  &--yellow
    background: #f0bc5e
    color: #000

    &:before
      background: #f0bc5e;

    &:after
      background: darken(#f0bc5e, 15%)

    &:hover
      color: #000

.checkbox
  display: flex

  &__text
    position: relative
    padding-left: 26px
    font-size: 11px
    line-height: 19px

    a
      padding-bottom: 2px

    &:before,
    &:after
      content: ''
      display: block
      position: absolute

    &:before
      width: 16px
      height: 16px
      border: 1px solid $blue
      left: 0
      top: 0

    &:after
      width: 6px
      height: 6px
      background: $blue
      opacity: 0
      left: 5px
      top: 5px
      anim()

  &__input
    display: none

  &__input:checked ~ &__text:after
    opacity: 1

