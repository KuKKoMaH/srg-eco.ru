.popularServices {

  @media (min-width: $breakpoint-sm + 1) {
    &--expanded {
      & ^[0]__link:nth-child(n + 5) {
        display: block;
      }

      & ^[0]__expandAll {
        svg {
          transform: rotate(90deg);
        }

        //display: none;
      }
    }
  }

  &__content {
    position: relative;
  }

  &__slider {
    overflow: hidden;
    margin: 0 -15px
    @media (max-width: $breakpoint-sm) {
      margin: 0
    }
  }

  &__items {
    display: flex;
    @media (max-width: $breakpoint-sm) {
      display: block;
    }
  }

  &__item {
    flex-shrink 0
    width: 33.3333%
    padding: 0 15px
    @media (max-width: $breakpoint-md) {
      width: 50%
    }

    @media (max-width: $breakpoint-sm) {
      width: 100%
      padding: 0
      margin-bottom: 20px

      &--expanded {
        & ^[0]__link:nth-child(n + 5) {
          display: block;
        }

        & ^[0]__expand {
          svg {
            transform: rotate(90deg);
          }

          //display: none;
        }
      }
    }
  }

  &__header {
    height: 80px
    border: 1px solid #D9D9D9;
    background: none;
    padding: 0 25px
    margin: 0
    margin-bottom: 30px;
    display: flex;
    align-items center
    font-size: 18px
    font-weight: 600
    anim()

    &:hover {
      border-color: $blue;
      color: $blue;
    }
    @media (max-width: $breakpoint-sm) {
      height: 64px
      font-size: 16px
      margin-bottom: 15px
    }
  }

  &__link {
    margin-bottom: 10px
    padding: 0 20px
    font-size: 16px
    @media (max-width: $breakpoint-sm) {
      font-size: 14px
    }

    &:last-child {
      margin-bottom: 0
    }

    &:nth-child(n + 5) {
      display: none;
    }

    a {
      background: none;
      font-weight: 500
    }

  }

  .nav {
    position: absolute;
    top: 0
    height: 80px
    width: 100%
    pointer-events none
    @media (max-width: $breakpoint-sm) {
      display: none;
    }
  }

  &__expand {
    display: none;
    @media (max-width: $breakpoint-sm) {
      margin: 0 auto
      width: 40px
      height: 40px
      display: flex;
      align-items center
      justify-content center
      svg {
        width: 18px
        height: 18px
        transform rotate(-90deg)
        fill $blue;
      }
    }
  }

  &__expandAll {
    margin-top: 40px
    width: 100%
    border-top: 1px solid #D9D9D9;
    height: 50px
    display: flex;
    align-items: center;
    justify-content: center;

    @media (max-width: $breakpoint-sm) {
      display: none;
    }

    svg {
      width: 18px
      height: 18px
      transform rotate(-90deg)
      fill $blue;
    }
  }
}
