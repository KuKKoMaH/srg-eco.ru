.eventMap
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__inner
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction: column
  &__left
    flex: 1
    margin-right: 100px
    @media (max-width: $breakpoint-sm)
      margin-right: 0

    h2
      margin-bottom: 45px
      @media (max-width: $breakpoint-sm)
        text-align: center
        margin-bottom: 35px

    p
      font-size: 13px
      line-height: 21px
      @media (max-width: $breakpoint-sm)
        font-size: 11px
        line-height: 19px

  &__right
    width: 100%
    max-width: 480px

  &__map
    height: 280px

    @media (max-width: $breakpoint-sm)
      height: 160px
      margin-top: 35px
      