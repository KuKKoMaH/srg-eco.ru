.eventStream
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__inner
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction: column
  &__left
    flex: 1
    margin-right: 100px
    @media (max-width: $breakpoint-sm)
      margin-right: 0

    h2
      margin-bottom: 45px
      @media (max-width: $breakpoint-sm)
        text-align: center
        margin-bottom: 35px

    p
      font-size: 13px
      line-height: 21px
      @media (max-width: $breakpoint-sm)
        font-size: 11px
        line-height: 19px

  &__right
    width: 100%
    max-width: 480px

  &__video
    height: 280px
    background-size: cover
    background-position: 50% 50%
    position: relative
    @media (max-width: $breakpoint-sm)
      height: 160px
      margin-top: 35px

    &:before
      content: ''
      display: block
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: $blue
      opacity: .75
      z-index: 1

    svg
      position: absolute
      z-index: 2
      fill: #fff
      width: 50px
      height: 50px
      left: 50%
      top: 50%
      margin-top: -25px
      margin-left: -25px