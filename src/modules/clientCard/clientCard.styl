.clientCard
  display: flex
  border: 7px solid $grey-middle
  margin-bottom: 20px
  background: $white
  @media (max-width: $breakpoint-md)
    flex-direction: column
    margin-bottom: 15px

  &:last-child
    margin-bottom: 0

  &__image
    position: relative;
    width: 45%
    min-height 300px
    display: flex
    flex-direction column
    align-items: center
    justify-content: center
    background-size: cover;
    background-position: 50% 50%
    @media (max-width: $breakpoint-md)
      width: 100%
      height: 150px
      margin-bottom: 15px

  &__content
    //width: 620px
    width: 55%
    @media (max-width: $breakpoint-md)
      width: 100%
