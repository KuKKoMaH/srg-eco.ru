.clientCard
  display: flex
  border: 7px solid $grey-middle
  margin-bottom: 20px
  background: $white
  @media (max-width: $breakpoint-sm)
    flex-direction: column
    margin-bottom: 15px

  &:last-child
    margin-bottom: 0

  &__image
    width: 390px
    min-width 390px
    display: flex
    flex-direction column
    align-items: center
    justify-content: center
    @media (max-width: $breakpoint-sm)
      min-width 0
      width: 100%
      min-height: 130px
      margin-bottom: 15px

  &__name
    text-align: center
    padding-top: 25px
    font-weight: bold
    @media (max-width: $breakpoint-sm)
      padding-top: 10px

  &__content
    position: relative
    padding: 45px 50px 40px 0
    flex: 1
    @media (max-width: $breakpoint-sm)
      padding: 0 30px 30px

  &__title
    font-size: 15px
    line-height: 1.5em
    font-weight: bold
    margin-bottom: 15px
    @media (max-width: $breakpoint-sm)
      font-size: 11px

  &__date
    position: absolute
    right: 50px
    top: 45px
    font-size: 11px
    color: $grey-dark
    @media (max-width: $breakpoint-sm)
      position: static
      margin-bottom: 15px
      font-size: 9px

  &__text
    font-size: 13px
    line-height: 1.6em
    margin-bottom: 22px
    @media (max-width: $breakpoint-sm)
      font-size: 9px

    p
      margin-bottom: 12px

      &:last-child
        margin-bottom: 0

  &__footer,
  &__row
    display: flex
    align-items: center

  &__footer
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      align-items: flex-start

  &__row
    @media (max-width: $breakpoint-sm)
      margin-bottom: 20px
      &:last-child
        margin-bottom: 0

  &__link
    margin-right: 25px
    font-weight: 500
    padding-bottom: 3px

  &__social
    width: 30px
    height: 30px
    margin: 0 10px 0 0
    border: 1px solid $grey-middle
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    background-image: none;
    padding-bottom: 0
    anim()

    &:hover
      border-color: $blue

    svg
      fill: $blue
      max-width: 12px
      max-height: 12px