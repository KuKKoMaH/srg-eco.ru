.clientsList
  padding: 50px 0 80px
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__items
    display: flex;
    flex-wrap wrap
    margin: 0 -10px

  &__item
    width: 25%
    padding: 10px
    position: relative;
    cursor: pointer;
    background: none;
    @media (max-width: $breakpoint-md)
      width: 50%
    @media (max-width: $breakpoint-sm)
      width: 100%

    &:hover
      .clientsList
        &__image
          filter: grayscale(0)

        &__text
          color: #ffffff
          background: #50bfdb

  &__image
    width: 100%
    height: 280px
    filter: grayscale(100%)
    background-position: 50% 50%
    background-size: cover
    anim()
    transform: translateZ(0)
    @media (max-width: $breakpoint-sm)
      filter: grayscale(0)

  &__text
    position: absolute;
    bottom: 30px
    left: 30px
    background: #ffffff
    font-family: 'Bebas Neue Book', sans-serif
    font-size: 24px
    padding 8px 10px 2px 10px
    anim()

  &__more
    padding-top: 30px
    text-align: center
    @media (max-width: $breakpoint-sm)
      padding-top: 25px

    .link
      font-weight: 500
      font-size: 13px
      padding-bottom: 3px
