.clientsList
  padding: 50px 0 80px
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__header
    display: flex
    align-items: center
    margin-bottom: 50px
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      margin-bottom: 20px

  &__types
    max-width 380px
    width: 100%
    @media (max-width: $breakpoint-sm)
      margin-bottom: 20px

  &__years
    margin-left: auto
    display: flex
    @media (max-width: $breakpoint-sm)
      position: static
      margin-top: 0
      flex-wrap: wrap
      align-items: center
      justify-content: center

  &__year
    position: relative
    margin-right: 8px
    padding: 5px 6px 6px
    background-image: none
    anim()
    @media (max-width: $breakpoint-sm)
      margin: 0 8px 13px

    &:after
      content: ''
      display: block
      position: absolute
      top: 100%
      left: 50%
      margin-left: -5px
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 0px 5px 0 5px;
      border-color: #50beda transparent transparent transparent;
      anim()

    &--active
      background: $blue
      color: $white

      .link
        color: $white

      &:after
        border-width: 5px 5px 0 5px;

    .link
      padding-bottom: 3px


  &__more
    padding-top: 30px
    text-align: center
    @media (max-width: $breakpoint-sm)
      padding-top: 25px

    .link
      font-weight: 500
      font-size: 13px
      padding-bottom: 3px