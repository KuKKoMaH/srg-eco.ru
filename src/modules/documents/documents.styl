.documents {

  &__head {
    display: flex;
    align-items: center;
  }

  &__aside {
    margin-left: auto;
  }

  &__container {
    position: relative;
  }

  &__slider {
    overflow: hidden;
    margin: -15px;
    @media (max-width: $breakpoint-sm) {
      margin-left: -5px;
      margin-right: -5px;
    }
  }

  &__items {
    display: flex;
  }

  &__item {
    flex-shrink: 0;
    padding: 10px;
    width: 20%;
    @media (max-width: $breakpoint-sm) {
      padding: 5px;
      width: 50%;
    }
  }

  &__doc {
    width: 215px
    display: block;
    position: relative;
    height: 300px;
    padding: 0
    margin: 0 auto
    background: 50% 50% no-repeat;
    background-size: cover;
    cursor: pointer;
    border: 1px solid #C4C4C4;
    @media (max-width: $breakpoint-sm) {
      //height: 215px;
    }

    &:hover {
      border-color: $blue;
      & ^[0]__button {
        opacity: 1;
      }

      & ^[0]__content {
        opacity: 0;
      }
    }
  }

  &__button {
    width: 42px;
    height: 42px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -21px;
    margin-left: -21px;
    background: $blue;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    anim();
    @media (max-width: $breakpoint-sm) {
      opacity: 1;
      width: 23px;
      height: 23px;
      top: 10px;
      right: 10px;
      left: auto;
      margin: 0;
      z-index: 1;
    }

    svg {
      width: 24px;
      height: 24px;
      color: $white;
      @media (max-width: $breakpoint-sm) {
        width: 11px;
        height: 11px;
      }
    }
  }

  &__content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba($black, .6);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 15px;
    color: $white;
    anim();
    @media (max-width: $breakpoint-sm) {
      text-align: center;
    }
  }

  &__header {
    font-weight: 600;
    margin-bottom: 5px;
    @media (max-width: $breakpoint-sm) {
      font-size: 14px;
    }
  }

  &__text {
    font-size: 12px;
    @media (max-width: $breakpoint-sm) {
      font-size: 10px;
    }
  }

  &__list {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -10px;
  }
}
