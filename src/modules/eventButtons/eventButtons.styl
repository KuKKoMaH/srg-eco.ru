.eventButtons
  position: relative
  background: $grey-bright

  &__inner
    position: relative
    height: 83px
    display: flex
    align-items: flex-end
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      height: auto

  &__items
    display: flex
    height: 170px
    background: $white
    padding: 30px 0
    max-width: 680px
    min-width: 400px
    margin-right: 20px
    flex: 1
    @media (max-width: $breakpoint-sm)
      margin-top: -50px
      height: 93px
      margin-bottom: 15px
      width: 100%
      max-width: none
      min-width: auto
      margin-right: 0
      padding: 15px 0

  &__item
    flex: 1
    border-right: 1px solid $grey-middle
    display: flex
    align-items: center
    justify-content: center
    &:last-child
      border-right: 0


  &__buttons
    max-width: 340px
    margin-left: auto
    padding: 40px
    background: $white
    min-width 0
    @media (max-width: $breakpoint-sm)
      max-width: none
      width: 100%
      padding: 30px

    .bigBtn
      margin-bottom: 15px
      padding: 0 20px

      &:last-child
        margin-bottom: 0

  &__number
    font-family: 'Bebas Neue', sans-serif;
    font-size: 35px
    @media (max-width: $breakpoint-sm)
      font-size: 25px

  &__text
    @media (max-width: $breakpoint-sm)
      font-size: 9px
