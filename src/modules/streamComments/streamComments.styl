.streamComments
  &__head
    display: flex;
    align-items center
    color: #B4B4B4
    padding-bottom: 10px
    margin-bottom: 40px
    border-bottom: 1px solid #EEEEEE

  &__total
    margin-left: auto;

  &__form
    margin-bottom: 20px

  &__formMessage
    position: relative;
    border-radius: 27px;
    border: 1px solid #D9D9D9

  &__submit
    position: absolute;
    width: 33px
    height: 33px
    border-radius: 50%
    right: 15px
    top: 10px
    border: 1px solid $blue;
    background: $blue;
    display: flex;
    align-items center
    justify-content center
    anim()

    &:hover
      background: $white;

      svg
        fill $blue

    svg
      width: 13px
      height: 13px
      fill $white
      transform rotate(180deg)
      anim()

  &__textarea
    padding: 20px 30px
    display: block;
    resize none
    width: 100%
    height: 54px
    font-size: 12px
    line-height: 1.25

  &__formName
    display: none;
    width: 310px
    max-width: 100%;
    margin-bottom: 10px

  &__input
    border: 1px solid #D9D9D9
    border-radius: 16px
    height: 32px
    padding: 0 30px
    width: 100%

  &__comment
    margin-top: 50px

    &:first-child
      margin-top: 0

  &__info
    margin-bottom: 25px;
    display: flex;
    align-items center
    @media (max-width: $breakpoint-sm)
      margin-bottom: 20px

  &__avatar
    flex-shrink 0
    width: 44px
    height: 44px
    border-radius: 50%
    overflow: hidden;
    background: #c4c4c4;
    margin-right: 25px

    img
      display: block;
      width: 100%
      height: 100%

  &__author
    width: 100%

  &__name
    width: 100%
    display: flex;
    align-items center
    font-weight: 600

  &__date
    font-size: 12px
    color: #7A7A7A;

  &__text
    margin-bottom: 15px
    @media (max-width: $breakpoint-sm)
      font-size: 12px

  &__meta
    display: flex;
    align-items center
    flex-wrap wrap

  &__metaButton
    display: flex;
    align-items center
    color: #B4B4B4
    font-size: 12px
    margin-right: 10px

    svg
      width: 16px
      height: 16px
      margin-right: 5px

  &__dislike
    svg
      transform rotate(180deg)

  &__responcesTotal
    display: flex;
    align-items center
    color: #B4B4B4;
    font-size: 12px
    margin-top: 20px
    margin-bottom: 35px
    width: 100%
    @media (max-width: $breakpoint-sm)
      width: auto;
      margin: 0
      margin-left: auto;

    svg
      width: 15px
      height: 15px
      margin-right: 10px

  &__responces
    margin-top: 20px
    border-left: 1px solid #C4C4C4;
    padding-left: 25px
    @media (max-width: $breakpoint-sm)
      margin-top: 50px

  &__menu
    position: relative;
    margin-left: 15px
    @media (max-width: $breakpoint-sm)
      margin-left: auto;

    &--active
      & ^[0]__actions
        visibility: visible;
        pointer-events all
        opacity: 1

  &__actionsLg, &__actionsSm
    width: 18px
    height: 18px
    display: flex;
    align-items center
    justify-content center
    fill: $blue

  &__actionsLg
    svg
      transform rotate(-90deg)
      width: 12px
      height: 12px

    @media (max-width: $breakpoint-sm)
      display: none;

  &__actionsSm
    display: none;

    svg
      width: 13px
      height: 13px
    @media (max-width: $breakpoint-sm)
      display: block;

  &__actions
    position: absolute;
    top: 0;
    left: 0
    background: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    width: 140px
    visibility: hidden;
    opacity: 0
    pointer-events none
    anim()
    @media (max-width: $breakpoint-sm)
      left: auto;
      right: 0

  &__action,
  &__actions .comment-reply-link
    height: 30px
    display: flex;
    align-items center
    justify-content center
    width: 100%
    color: $blue;
    font-size: 12px
    font-weight: normal;
    background: none;

  &__cancelRespond
    margin-bottom: 10px;
    margin-left: 30px;

  &__response
    display: flex;
    align-items flex-start
    margin-top: 20px
    @media (max-width: $breakpoint-sm)
      flex-direction column

  &__responseForm
    flex: 1;
    @media (max-width: $breakpoint-sm)
      width: 100%

  &__responseRow
    display: flex;
    align-items flex-start
    //align-items stretch

  &__responseMessage
    height 33px
    border-radius: 16px 0 0 16px
    border: 1px solid #D9D9D9
    padding: 7px 20px
    resize none
    width: 100%
    font-size: 12px

  &__responseButton
    height: 33px
    border-radius: 0 16px 16px 0
    background: #C4C4C4;
    color: #fff;
    font-size: 12px
    padding: 0 10px

  &__cancel
    background: none;
    padding: 0
    margin-left: 16px
    font-size: 12px
    color: #B4B4B4;
    margin-top: 7px

