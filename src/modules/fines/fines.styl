.fines
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  .c
    position: relative;

  &__title
    text-align: center
    margin-bottom: 15px

  &__text
    text-align: center
    max-width: 780px
    margin: 0 auto
    font-size: 13px
    line-height: 1.6em
    margin-bottom: 25px
    @media (max-width: $breakpoint-sm)
      font-size: 11px

  &__content
    margin: 0 80px
    position: relative
    margin-top: 40px
    @media (max-width: $breakpoint-md)
      margin: 0

  &__slider
    overflow: hidden;

  &__slides
    display: flex;

  &__slide
    width: 100%
    flex-shrink 0

  &__items
    display: flex;
    margin: 0 -15px
    align-items stretch
    justify-content center
    @media (max-width: $breakpoint-md)
      flex-direction column
      margin: 0

  &__item
    display: flex;
    flex-direction column
    flex: 1
    margin: 0 15px
    border: 7px solid $grey-middle
    padding: 30px
    background: $white
    text-align: center
    @media (max-width: $breakpoint-md)
      margin: 0 0 10px
      padding: 12px 14px
      flex-direction row
      align-items center

      &:last-child
        margin-bottom: 0

  //@media (max-width: $breakpoint-sm)

  &__link
    @media (max-width: $breakpoint-md)
      text-align: left;

    span
      display inline
      font-size: 15px
      line-height: 1.5em
      color: $blue
      background-image: none
      border-bottom: 1px solid $blue
      padding-bottom: 1px
      @media (max-width: $breakpoint-sm)
        font-size: 11px
        margin-right: 14px
        text-align: left;

  &__number
    margin-top: 25px
    font-family: 'Bebas Neue', sans-serif;
    font-size: 25px
    @media (max-width: $breakpoint-md)
      margin-top: 8px
      margin-left: auto;
      flex-shrink 0
    @media (max-width: $breakpoint-sm)
      font-size: 20px

  &__arrows
    display: flex
    align-items: center
    justify-content: center

  &__arrow
    position: absolute
    bottom: 0
    width: 50px
    height: 50px
    top: 50%
    margin-top: -25px
    display: block
    background: #ffffff
    border: 1px solid $grey-middle
    anim()
    @media (max-width: $breakpoint-sm)
      margin: 10px 5px 0
      position: static
      height: 40px
      width: 70px

    &:hover
      border: 1px solid $blue

    &--left
      right: 100%
      margin-right: 30px
      @media (max-width: $breakpoint-sm)
        margin-right: 5px

      svg
        transform: rotate(180deg)

    &--right
      left: 100%
      margin-left: 30px
      @media (max-width: $breakpoint-sm)
        margin-left: 5px

    svg
      margin: 0 auto
      display: block
      width: 20px
      height: 14px
      fill: $blue
