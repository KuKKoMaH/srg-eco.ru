.importantInfo {
  background: #EEEEEE;
  padding: 55px 0

  .c {
    display: flex;
    @media (max-width: $breakpoint-sm) {
      flex-direction column
    }
  }

  &__image {
    margin-right: 35px
    flex-shrink 0
    @media (max-width: $breakpoint-sm) {
      margin: 0 auto 40px
    }

    img {
      max-width 100%;
      height: auto;
    }
  }

  &__content {
    display: flex;
    flex-direction column
    align-items flex-start
    font-size: 16px
    @media (max-width: $breakpoint-sm) {
      font-size: 14px
      align-items center
      text-align: center;
    }
  }

  .btn {
    margin-top: auto;
    @media (max-width: $breakpoint-sm) {
      margin: 0 auto
    }
  }
}
