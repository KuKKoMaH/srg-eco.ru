.frontSlider
  position: relative
  height: 700px
  overflow: hidden
  @media (max-width: $breakpoint-sm)
    height: 566px

  &__slides
    display: flex;

  &__slide
    width: 100%
    flex-shrink 0
    position: relative
    height: 700px
    background-size: cover
    background-position: 50% 50%
    padding-bottom: 140px
    color: #ffffff
    @media (max-width: $breakpoint-sm)
      height: 566px
      padding-bottom: 160px

    &:before,
    &:after
      content: ''
      display: block
      position: absolute
      left: 0
      top: 0
      width: 100%
      bottom: 140px
      @media (max-width: $breakpoint-sm)
        bottom: 160px

    &:before
      background: url('data:image/gif;base64,R0lGODlhDAAMAPABAP///wAAACH5BAUAAAEALAAAAAAMAAwAAAILRI6py+0Po5y0sgIAOw==')
      opacity: .25
      @media (max-width: $breakpoint-sm)
        opacity: .5

    &:after
      background: linear-gradient(to right, rgba($black, 1) 0%, rgba($black, 0) 100%)
      opacity: .5
      @media (max-width: $breakpoint-sm)
        background: #282828 linear-gradient(to top, rgba($black, 1) 0%, rgba($black, 0) 100%)

    .c
      position: relative
      z-index: 1
      height: 100%
      display: flex
      justify-content: center
      flex-direction: column
      align-items: flex-start
      @media (max-width: $breakpoint-sm)
        align-items: center

    h2
      font-size: 70px
      @media (max-width: $breakpoint-sm)
        font-size: 40px
        text-align: center
    p
      font-size: 13px
      line-height: 1.8em
      max-width: 370px
      margin-bottom: 25px
      @media (max-width: $breakpoint-sm)
        font-size: 11px
        text-align: center

    .btn
      font-size: 14px
      letter-spacing: 2px

      &:hover
        svg
          fill: $white

      svg
        width: 16px
        height: 12px
        fill: $blue
        anim()

  &__footer-bg
    bottom: 0
    left: 0
    width: 100%
    height: 140px
    position: absolute
    overflow: hidden
    @media (max-width: $breakpoint-sm)
      height: 160px

    &:after
      content: ''
      display: block
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background-color: rgba($black, .7);

  &__footer-img
    position: absolute
    left: 0
    top: -(700px - 140px)
    width: 100%
    height: 700px
    background-size: cover
    background-position: 50% 50%
    filter: grayscale(100%) blur(3px)


  &__controls
    display: flex
    justify-content: flex-end
    @media (max-width: $breakpoint-sm)
      justify-content: center

  &__controls-inner
    position: absolute
    bottom: 180px
    display: flex
    //width: 55px
    justify-content: space-between
    @media (max-width: $breakpoint-sm)
      bottom: 160px

  &__arrow
    display: block
    //opacity: .5
    width: 48px
    height: 48px
    background: #50bfdb
    border: 1px solid #50bfdb
    margin: 0 8px
    anim()

    &:hover
      background: #ffffff
      svg
        fill: #50bfdb

    &--left
      transform: rotate(180deg)

    svg
      display: block
      margin: 0 auto
      width: 20px
      height: 14px
      fill: $white
      anim()

  &__footer
    position: absolute
    bottom: 0
    height: 140px
    left: 0
    width: 100%
    @media (max-width: $breakpoint-sm)
      height: 160px

  &__footer-inner
    height: 100%
    display: flex
    align-items: center
    color: #ffffff
    @media (max-width: $breakpoint-sm)
      flex-direction: column

  &__footer-title
    //font-size: 30px
    margin-right: 40px
    margin-top: 5px
    letter-spacing: 2px
    @media (max-width: $breakpoint-sm)
      text-align: center
      //font-size: 20px
      margin-right: 0
      margin-top: 30px

  &__bullets
    flex: 1
    display: flex
    align-items: center
    justify-content: space-between
    @media (max-width: $breakpoint-sm)
      flex-wrap: wrap


  &__bullet
    display: flex
    align-items: center
    background: none
    @media (max-width: $breakpoint-sm)
      width: 50%
      padding: 0 10px
      font-size: 9px

    img
      margin-right: 10px
      @media (max-width: $breakpoint-sm)
        max-width: 22px
        max-geight: 22px
