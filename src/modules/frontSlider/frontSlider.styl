  .frontSlider
    display: block;
    position: relative
    //height: 560px
    overflow: hidden
    //@media (max-width: $breakpoint-sm)
    //  height: 566px

    &__slides
      display: flex;

    &__slide
      width: 100%
      flex-shrink 0
      position: relative
      height: 560px
      //height: 700px
      background-size: cover
      background-position: 50% 50%
      //padding-bottom: 140px
      color: #ffffff
      @media (max-width: $breakpoint-sm)
        height: 595;
      //  height: 120px

      &:before,
      &:after
        content: ''
        display: block
        position: absolute
        left: 0
        top: 0
        width: 100%
        bottom: 0

      &:before
        background: #000;
        opacity: .65

      .c
        position: relative
        z-index: 1
        height: 100%
        display: flex
        justify-content: center
        flex-direction: column
        align-items: flex-start

        //@media (max-width: $breakpoint-sm)
        //  display: none;
        //align-items: center

        h1
          margin: 0
          font-size: 70px
          @media (max-width: $breakpoint-sm)
            font-size: 40px
            text-align: center

        p
          font-size: 16px
          //line-height: 1.8em
          max-width: 900px
          margin: 0 0 25px 0
          //@media (max-width: $breakpoint-sm)
          //  font-size: 11px
          //  text-align: center

        .btn
          font-size: 14px
          letter-spacing: 2px

          &:hover
            svg
              fill: $white

          svg
            width: 16px
            height: 12px
            fill: $blue
            anim()

    &__controls
      display: flex
      justify-content: flex-end
      //@media (max-width: $breakpoint-sm)
      //justify-content: center

    &__controls-inner
      position: absolute
      bottom: 50px
      display: flex
      //width: 55px
      justify-content: space-between
      //@media (max-width: $breakpoint-sm)
      //  bottom: 160px

    &__arrow
      display: block
      //opacity: .5
      width: 48px
      height: 48px
      background: #50bfdb
      border: 1px solid #50bfdb
      margin: 0 8px
      anim()
      @media (max-width: $breakpoint-sm)
        width: 42px
        height: 42px

      &:hover
        background: #ffffff

        svg
          fill: #50bfdb

      &--left
        transform: rotate(180deg)

      svg
        display: block
        margin: 0 auto
        width: 20px
        height: 14px
        fill: $white
        anim()

