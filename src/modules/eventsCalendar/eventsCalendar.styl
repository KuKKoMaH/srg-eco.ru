.eventsCalendar
  &__content
    display: flex
    //margin: 0 -40px
    @media (max-width: $breakpoint-sm) {
      margin: 0
    }


  &__calendar
    width: 50%
    padding-left: 25px
    @media (max-width: $breakpoint-sm)
      display: none;

  &__event
    width: 50%
    padding-right: 25px
    display: flex;
    flex-direction column
    @media (max-width: $breakpoint-sm)
      width: 100%
      padding: 0

  &__card {
    flex: 1;
  }

  &__head
    display: flex
    margin-bottom: 20px
    align-items: center

  &__label {
    font-size: 16px
    font-weight: 500
  }

  &__nav {
    margin-left: auto;
    display: flex;
    align-items center
    @media (max-width: $breakpoint-sm) {
      display: none;
    }
  }

  &__button
    //width: 180px
    //height: 50px
    width: 32px
    height: 32px
    display: flex;
    align-items center
    justify-content center

    svg
      width: 18px
      height: 18px
      fill: $blue

    &--next
      svg
        transform: rotate(180deg)

  &__month {
    font-size: 16px
    font-weight: 500
    color: $blue;
    margin: 0 5px
  }

  &__week
    display: flex;
    font-size: 16px
    font-weight: 500
    text-align: center;
    margin-bottom: 10 px1

  &__days
    display: flex;
    flex-wrap wrap
    position: relative;

  &__popup
    position: absolute;
    background: $white;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    padding: 20px
    left: 0
    margin-left: 6px
    bottom: 100%
    margin-bottom: 6px
    width: calc(400% - 12px)
    opacity: 0
    visibility: hidden;
    pointer-events none
    transform translateY(6px)
    anim()

  &__cell {
    width: (100 / 7) %;
    padding: 6px
    position: relative;

    for num in (1..4) {
      &:nth-child(7n + {4 + num}) {
        & ^[0]__popup {
          left: -(100 * num) %
        }
      }
    }

    &:hover {
      & ^[0]__popup {
        opacity: 1;
        visibility: visible;
        pointer-events: all
        transform none
      }
    }
  }

  &__day
    border: 1px solid #D9D9D9;
    display: flex;
    align-items center
    justify-content center
    height: 55px
    background: none;
    padding: 0
    margin: 0
    font-size: 18px
    font-weight: 500
    color: #C4C4C4;

    a&
      color: $blue;
      border-color: $blue;

      &:hover {
        color: $white;
        background: $blue;
      }

  &__title {
    font-weight: 600;
    font-size: 14px;
    color: $blue;
  }

  &__footer {
    display: flex;
    flex-wrap wrap
    margin-top: 20px
    font-size: 12px
    color: #B4B4B4;

    span {
      &:before {
        content '|';
        color: $blue;
        margin: 0 5px
      }

      &:first-child {
        &:before {
          display: none;
        }
      }
    }
  }

  &__empty {
    border: 1px solid #D9D9D9;
    height: 100%
    display: flex;
    align-items center
    justify-content center
    flex-direction column
    text-align: center;
    padding: 20px
  }

  &__emptyIcon {
    margin-bottom: 20px
    svg {
      width: 42px
      height: 42px
    }
  }

  &__emptyTitle {
    font-size: 18px
    font-weight: 600
    color: $blue;
    margin-bottom: 5px
    max-width 400px;
  }

  &__emptyText {
    font-size: 16px
    max-width 400px;
  }
