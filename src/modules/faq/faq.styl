.faq
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__inner
    position: relative

  &__title
    margin-bottom: 40px

  &__item
    margin-bottom: 20px
    &:last-child
      margin-bottom: 0
    &--active
      & ^[0]__head
        &:before
          transform: rotate(-45deg) translateY(-4px)

        &:after
          transform: rotate(45deg) translateY(-4px)

  &__head
    height: 90px
    display: flex
    align-items: center
    padding: 0 80px 0 30px
    cursor: pointer
    position: relative
    @media (max-width: $breakpoint-sm)
      min-height: 68px
      height: auto
      padding-top: 10px
      padding-bottom: 10px

    &:before,
    &:after
      content: ''
      display: block
      position: absolute
      width: 8px
      height: 1px
      background: $blue
      anim()
      right: 40px
      top: 50%
      @media (max-width: $breakpoint-sm)
        top: 34px

    &:before
      transform: rotate(-45deg) translateY(4px)

    &:after
      transform: rotate(45deg) translateY(4px)

  &__question
    font-size: 15px
    line-height: 21px
    color: $blue
    text-decoration: underline
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      line-height: 19px

  &__body
    height: 0
    overflow: hidden
    will-change: height
    anim()

  &__content
    padding: 0 30px 30px
    display: flex
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      flex-direction: column

    p
      margin-bottom: 15px

    .bigBtn
      display: inline-block
      width: auto
      @media (max-width: $breakpoint-sm)
        width: 100%

  &__speaker
    border: 7px solid $grey-middle
    display: flex
    width: 380px
    max-width: 50%
    margin-right: 20px
    align-items: center
    min-height: 95px
    margin-bottom: 15px
    @media (max-width: $breakpoint-sm)
      width: 100%
      max-width: none
      flex-direction: column

  &__image
    min-width: 95px
    align-self: stretch
    @media (max-width: $breakpoint-sm)
      height: 115px

  &__info
    padding: 10px 15px 10px 30px
    @media (max-width: $breakpoint-sm)
      padding: 20px

  &__name
    font-size: 13px
    text-decoration: underline
    margin-bottom: 15px
    color: $blue

  &__posiotion
    font-size: 11px

  &__answer
    max-width: 650px
    margin-left: auto

    p:last-child
      margin-bottom: 0

  &__link
    text-align: center
    font-weight: 500
    position: absolute
    margin-top: 9px
    top: 0
    right: 0
    @media (max-width: $breakpoint-sm)
      position: static
      margin-top: 40px
