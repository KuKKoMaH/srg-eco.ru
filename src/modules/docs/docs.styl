.docs
  background: $grey-bright
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__title
    text-align: center
    margin-bottom: 35px

  &__items
    display: flex
    flex-wrap wrap
    @media (max-width: $breakpoint-sm)
      flex-direction: column

  &__item
    width: 20%
    margin-right: 5%
    margin-bottom: 30px
    mar
    &:last-child
      margin-right: 0
    @media (max-width: $breakpoint-sm)
      width: 100%
      margin-right: 0
      text-align: center
      margin-bottom: 40px
      &:last-child
        margin-bottom: 0

  &__date
    color: $grey-dark
    font-size: 11px
    margin-bottom: 20px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 15px

  &__text
    line-height: 21px
    margin-bottom: 20px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 15px

  //&__links
  //  margin-top: auto

  &__link
    margin-right: 25px
    color: $blue
    font-weight: 500
    padding-bottom: 3px
    &:hover
      color: $black
    &:last-child
      margin-right: 0
