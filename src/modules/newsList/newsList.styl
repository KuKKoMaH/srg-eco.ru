.newsList
  padding: 40px 0
  @media (max-width: $breakpoint-sm)
    padding: 20px 0

  &__items
    display: flex
    margin: 0 -10px
    flex-wrap: wrap
    @media (max-width: $breakpoint-sm)
      margin: 0
      flex-wrap: nowrap
      flex-direction: column

  &__item
    width: 33.3%
    padding: 0 10px 20px
    background-image: none
    @media (max-width: $breakpoint-sm)
      width: 100%
      padding: 0
      margin-bottom: 15px

    @media (min-width: $breakpoint-sm + 1)

      &:nth-child(8n - 3),
      &:nth-child(8n - 4)
        width: 50%

        .card
          &__inner
            display: flex
            flex-direction row

          &__head
            width: 178px
            min-width: 178px
            height: 100%

          &__label
            bottom: 26px

  &__more
    text-align: center
    margin-top: 25px

    .link
      font-weight: 500
      padding-bottom: 3px