.pageInfo
  padding: 80px 0 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0 0

  &__title
    text-align: center
    margin-bottom: 40px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 25px

  &__text
    font-size: 13px
    line-height: 21px
    //text-align: center
    max-width: 780px
    margin: 0 auto 45px
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      line-height: 19px
      margin-bottom: 35px
    p
      margin-bottom: 15px
      &:last-child
        margin-bottom: 0

  &__items
    display: flex
    align-items flex-start
    justify-content center
    //flex-wrap wrap
    margin: 0 -10px -10px
    @media (max-width: $breakpoint-sm)
      //margin: 0
      flex-direction: column
      align-items: center

  &__col
    width: 25%
    padding: 10px
    @media (max-width: $breakpoint-sm)
      width: 100%

  &__head
    color: #50bfdb
    //padding-left: 10px
    margin-bottom: 8px
    font-size: 13px

  &__item
    //flex: 1
    display: block
    width: 100%
    background-image: none;
    padding-bottom: 0
    margin-bottom: 20px
    //min-height: 215px
    @media (max-width: $breakpoint-sm)
      width: 100%
      height: 138px
      padding: 0
      margin-bottom: 15px

  &__image
    height: 130px
    display: flex
    align-items: center
    justify-content: center
    @media (max-width: $breakpoint-sm)
      height: 100px

  &__header
    flex: 1
    text-align: center
    display: flex
    align-items: center
    justify-content: center
    margin-bottom: 10px
    padding: 0 10px
    font-size: 15px
    line-height: 21px
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      br
        display: none