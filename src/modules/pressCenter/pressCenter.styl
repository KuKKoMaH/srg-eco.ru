.pressCenter {
  &__container {
    display: flex;
    @media (max-width: $breakpoint-sm) {
      flex-direction column-reverse
    }
  }

  &__main {
    flex: 2;
    display: flex;
    @media (max-width: $breakpoint-sm) {
      flex-direction column
    }
  }

  &__aside {
    width: 260px
    margin-left: 30px
    @media (max-width: $breakpoint-sm) {
      margin-left: 0
      width: 100%
      margin-bottom: 40px
    }
  }

  &__news {
    flex: 1;
    margin-right: 30px
    @media (max-width: $breakpoint-sm) {
      margin-right: 0
      margin-bottom: 20px
    }
  }

  &__articles {
    flex: 1;
    display: flex;
    flex-direction column
  }

  &__article {
    flex: 1;
    margin-bottom: 12px;
    @media (max-width: $breakpoint-sm) {
      margin-bottom: 20px
    }

    &:last-child {
      margin-bottom: 0;
    }
  }

  &__card {
    border: 1px solid #D9D9D9;
    padding: 25px 20px
    background: none;
    margin: 0
    height: 100%
    display: flex;
    flex-direction column
    anim()

    &:hover {
      border-color: $blue;
      color: $black;
    }
  }

  &__title {
    font-size: 16px
    font-weight: 600
    color: $blue;
    margin-bottom: 12px
  }

  &__label {
    font-size: 12px
    color: #7A7A7A;
  }

  &__text {
    margin-top: 15px
    margin-bottom: 10px
  }

  &__footer {
    display: flex;
    align-items center
    margin-top: auto;
  }

  &__more {
    font-weight: 500
    text-transform: uppercase;
    margin-left: auto;

    span {
      margin-left: 5px
      color: $blue;
    }
  }

  &__link {
    position: relative;
    background: none;
    margin-bottom 12px;
    color: #ffffff
    display: flex;
    align-items center
    font-weight: 600;
    font-size: 18px;
    padding: 0 15px
    height: 72px
    background-size: cover;
    background-position: 50% 50%;

    &:last-child {
      margin-bottom: 0
    }

    &:before {
      content ''
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(#000000, .65)
      border: 1px solid #B4B4B4;
      anim()
    }

    span {
      position: relative;
      anim()
    }

    svg {
      margin-left: auto;
      transform rotate(180deg)
      width: 20px
      height: 20px
      fill: currentColor
      anim()
    }

    &:hover {
      &:before {
        background: $white;
      }
    }
  }
}
