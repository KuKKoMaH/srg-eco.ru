.cardsList
  position: relative
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &--slider
    @media (max-width: $breakpoint-sm)
      padding: 40px 0 40px
      & ^[0]__items
        display: block
      & ^[0]__item
        margin-bottom: 0

  &--grey
    background: $grey-bright

  &__title
    margin-bottom: 35px
    @media (max-width: $breakpoint-sm)
      text-align: center

  &__link
    display: flex
    justify-content: flex-end
    @media (max-width: $breakpoint-sm)
      justify-content: center
      margin-top: 35px

  &__all
    position: absolute
    top: 80px
    margin-top: 9px
    font-weight: 500
    padding-bottom: 4px
    @media (max-width: $breakpoint-sm)
      position: static
      margin-top: 0

  &__items
    margin: 0 -10px
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      margin: 0

  &__item
    display: block
    position: relative
    width: 33.33333%
    //flex: 1
    padding: 0 10px
    background-image: none
    //padding: 0
    @media (max-width: $breakpoint-sm)
      padding: 0 0 15px
      width: 100%
      height: auto

  &__arrows
    display: none
    align-items: center
    justify-content: center
    @media (max-width: $breakpoint-sm)
      display: flex
      
  &__arrow
    top: 0
    bottom: 0
    display: block
    background: #ffffff
    border: 1px solid $grey-middle
    margin: 10px 5px 0
    height: 40px
    width: 70px
    anim()

    &:hover
      border: 1px solid $blue

    &--left
      left: 0
      svg
        transform: rotate(180deg)

    &--right
      right: 0

    svg
      margin: 0 auto
      display: block
      width: 20px
      height: 14px
      fill: $blue
