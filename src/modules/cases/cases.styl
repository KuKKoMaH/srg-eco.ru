.cases {

  &__items {
    position: relative;
    anim()
  }

  &__item {
    //margin-bottom: 25px;
    @media (max-width: $breakpoint-sm) {
      margin-bottom: 6px;
    }

    &:last-child {
      margin-bottom: 0;

      & ^[0]__header {
        margin-bottom: 0
      }
    }

    &--active {
      & ^[0]__header {
        color: $blue;

        &:before {
          background: $white;
        }
      }

      & ^[0]__arrow {
        @media (max-width: $breakpoint-sm) {
          transform rotate(270deg)
        }
      }

      & ^[0]__body {
        z-index: 1;
        opacity: 1;
        visibility: visible;
        transform: none;

        @media (max-width: $breakpoint-sm) {
          max-height: none;
        }
      }
    }
  }

  &__header {
    position: relative;
    min-height: 63px;
    width: 360px;
    display: flex;
    flex-direction row;
    align-items center
    font-size: 18px;
    font-weight: 600;
    color: $white;
    margin-bottom: 8px;
    padding: 0 20px;
    cursor: pointer;
    anim();

    &:before {
      content: '';
      display: block;
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(#000, .65);
      border: 1px solid #C4C4C4;
      anim();
    }

    span {
      position: relative;
      z-index: 1
    }

    @media (max-width: $breakpoint-sm) {
      font-size: 16px;
      width: 100%;
      margin-bottom: 0;
    }
  }

  &__arrow {
    margin-left: auto;
    transform rotate(180deg);
    anim();

    svg {
      fill: currentColor;
      width: 18px
      height: 18px
      anim();
    }
  }

  &__body {
    position: absolute;
    top: 0;
    right: 0;
    left: 390px;
    opacity: 0;
    z-index: -1;
    visibility: hidden;
    transform: translateY(20px);
    anim(.2s);

    @media (max-width: $breakpoint-sm) {
      margin: -5px;
      padding: 5px;
      height: auto;
      position: static;
      max-height: 0;
      overflow: hidden;
      transform: translateY(10px);
    }
  }

  &__content {
    font-size: 16px
    @media (max-width: $breakpoint-sm) {
      margin-top: 15px;
      margin-bottom: 5px;
    }
  }

  &__listItem {
    display: flex;
    align-items: center;
    margin-bottom: 25px;

    &:last-child {
      margin-bottom: 0;
    }

    @media (max-width: $breakpoint-sm) {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  &__description {
    color: $dark-grey;
    font-size: 14px;
    @media (max-width: $breakpoint-sm) {
      font-size: 12px;
    }
  }

  &__price {
    color: $blue;
    font-size: 22px;
    font-weight: 600;
    padding-left: 20px;
    margin-left: auto;
    flex-shrink: 0;
    @media (max-width: $breakpoint-sm) {
      padding: 0;
      margin: 0;
      font-size: 14px;
      margin-top: 10px;
    }
  }

}
