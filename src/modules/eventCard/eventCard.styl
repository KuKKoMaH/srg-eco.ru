.eventCard {
  border: 1px solid #D9D9D9;
  display: flex;
  min-height: 200px;
  height: 100%
  position: relative;
  background: none;
  padding: 0
  margin: 0

  &:hover {
    border-color: $blue;
    color: $black;
  }

  &__img {
    background: $black 50% 50%;
    background-size: cover;
    position: relative;
    width: 200px;
    flex-shrink: 0;
    color: $white;
    @media (max-width: $breakpoint-sm) {
      width: 0
    }

    &:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background: $black;
      opacity: .6;
    }
  }

  &__label {
    position: absolute;
    top: 75px;
    left: 0
    font-size: 14px;
    line-height: 1
    border: 1px solid $blue;
    padding: 8px 15px;
    @media (max-width: $breakpoint-sm) {
      display: none;
    }
  }

  &__date {
    position: absolute;
    top: 25px
    left: 0
    background: $blue;
    font-size: 18px
    line-height: 1
    font-weight: 600
    color: $white;
    padding: 10px 15px
    text-transform: uppercase;
    @media (max-width: $breakpoint-sm) {
      top: 20px
      width: 100px
      text-align: center;
      padding-left: 0
      padding-right: 0
      font-size: 12px
    }
  }

  &__content {
    padding: 30px 30px 25px;
    display: flex;
    flex-direction: column;
    @media (max-width: $breakpoint-sm) {
      padding: 70px 15px 20px;
    }
  }

  &__title {
    color: $blue;
    font-weight: 600;
    font-size: 18px;
    margin-bottom: 15px;
    @media (max-width: $breakpoint-sm) {
      font-size: 14px;
      font-weight: 500
      margin-bottom: 12px;
    }
  }

  &__bullets {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 10px;
    @media (max-width: $breakpoint-sm) {
      position: absolute;
      margin: 0
      top: 24px
      left: 115px
    }
  }

  &__bullet {
    display: flex;
    align-items: center;
    font-size: 14px;
    margin: 10px 30px 10px 0;
    @media (max-width: $breakpoint-sm) {
      margin: 5px;
      margin-left: 0;
      font-size: 10px;
    }

    svg {
      width: 24px;
      height: 24px;
      color: $blue;
      margin-right: 15px;
      @media (max-width: $breakpoint-sm) {
        width: 12px;
        height: 12px;
        margin-right: 8px;
      }
    }

    &:last-child {
      margin-right: 0;
    }
  }

  &__text {
    color: $dark-grey;
    font-size: 12px;
    margin-bottom: 20px;
    @media (max-width: $breakpoint-sm) {
      margin-bottom: 10px;
    }
  }

  &__footer {
    margin-top: auto;
    text-align: right;
  }

  &__more {
    background: none;
    padding: 0
    margin: 0
    font-size: 14px
    font-weight: 500
    anim();

    @media (max-width: $breakpoint-sm) {
      font-size: 12px;
    }

    &:hover {
      color: $blue;
      text-decoration: none;
    }

    span {
      color: $blue;
      margin-left: 5px
    }
  }
}
