.hero
  position: relative
  min-height: 305px
  display: flex
  align-items center
  background-size: cover
  background-position: 50% 50%
  padding: 20px 0
  @media (max-width: $breakpoint-sm)
    height: 190px

  &:before,
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%

  &:before
    background: url('data:image/gif;base64,R0lGODlhDAAMAPABAP///wAAACH5BAUAAAEALAAAAAAMAAwAAAILRI6py+0Po5y0sgIAOw==')
    opacity: .25
    @media (max-width: $breakpoint-sm)
      opacity: .5

  &:after
    background: linear-gradient(to right, rgba($black, 1) 0%, rgba($black, 0) 100%)
    opacity: .5
    @media (max-width: $breakpoint-sm)
      background: #282828 linear-gradient(to top, rgba($black, 1) 0%, rgba($black, 0) 100%)

  &--big
    min-height: 385px
    @media (max-width: $breakpoint-sm)
      height: 360px

      h1
        font-size: 25px

  .c
    height: 100%

  &__inner
    position: relative
    z-index: 1
    height: 100%
    //max-width: 680px
    margin-right: 380px
    display: flex
    align-items: flex-start
    justify-content: center
    flex-direction: column
    color: $white
    //@media (max-width: $breakpoint-md)
    @media (max-width: $breakpoint-sm)
      margin-right: 0
      align-items: center
      text-align: center

  &__breadcrumbs
    margin-bottom: 40px

  &__item
    display: inline-block
    vertical-align: middle

    &:after
      content: '/'
      display: inline-block
      margin: 0 8px

    &:last-child:after
      display: none

  &__label
    color: #fff
    background: $blue
    padding: 5px 8px
    margin-bottom: 13px
    @media (max-width: $breakpoint-sm)
      font-size: 9px

  &__sub
    font-size: 15px
    margin-top: 20px
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      line-height: 19px