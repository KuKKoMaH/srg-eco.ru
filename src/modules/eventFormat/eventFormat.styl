.eventFormat
  padding: 80px 0
  //background: $grey-bright
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__inner
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction: column

  &__title
    width: 300px
    @media (max-width: $breakpoint-sm)
      width: auto
      text-align: center
      margin-bottom: 40px

  &__items
    flex: 1

  &__item
    margin-bottom: 20px
    &:last-child
      margin-bottom: 0
    &--active
      & ^[0]__head
        &:before
          transform: rotate(-45deg) translateY(-4px)

        &:after
          transform: rotate(45deg) translateY(-4px)

  &__head
    height: 90px
    display: flex
    align-items: center
    padding: 0 30px
    cursor: pointer
    position: relative
    @media (max-width: $breakpoint-sm)
      height: 68px

    &:before,
    &:after
      content: ''
      display: block
      position: absolute
      width: 8px
      height: 1px
      background: $blue
      anim()
      right: 40px
      top: 50%

    &:before
      transform: rotate(-45deg) translateY(4px)

    &:after
      transform: rotate(45deg) translateY(4px)

  &__name
    font-size: 15px
    line-height: 1.5em
    color: $blue
    text-decoration: underline
    width: 260px
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      width: 95px

  &__price
    font-size: 15px
    @media (max-width: $breakpoint-sm)
      font-size: 11px

  &__body
    height: 0
    overflow: hidden
    will-change: height
    anim()

  &__content
    padding: 0 30px 30px
    @media (max-width: $breakpoint-sm)
      font-size: 11px

    p
      margin-bottom: 15px

    .bigBtn
      width: auto
      @media (max-width: $breakpoint-sm)
        width: 100%
