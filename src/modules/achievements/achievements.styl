.achievements
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &--grey
    background: $grey-bright

  &__title
    margin-bottom: 37px
    @media (max-width: $breakpoint-sm)
      text-align: center
      margin-bottom: 30px

  &__slide
    position: relative
    height: 280px

    &:hover
      & ^[0]__image
        filter: grayscale(0)
        &:before
          opacity: 0
        &:after
          opacity: .5

      & ^[0]__big
        color: $white
        background: $blue

  &__image
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-size: cover
    background-position: 50% 50%
    filter: grayscale(100%)
    anim()
    transform: translateZ(0)
    @media (max-width: $breakpoint-sm)
      filter: grayscale(0)

    &:before,
    &:after
      content:''
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      anim()

    &:before
      opacity: .4
      background: $black
      @media (max-width: $breakpoint-sm)
        opacity: 0

    &:after
      background: linear-gradient(to top, rgba($black, 1) 0%, rgba($black, 0) 100%)
      opacity: 0
      @media (max-width: $breakpoint-sm)
        opacity: .5

  &__content
    position: absolute
    bottom: 0
    padding: 28px 31px
    color: #ffffff

  &__big
    font-family: 'Bebas Neue Book', sans-serif
    font-size: 40px
    background: $white
    display: inline-block
    line-height: 1
    padding: 10px 10px 2px
    margin: 13px 0
    color: $black
    anim()
    @media (max-width: $breakpoint-sm)
      background: $blue
      color: $white

  &__text
    font-size: 11px
    line-height: 1.7em


