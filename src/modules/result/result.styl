.result
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__inner
    display: flex
    margin: 0 100px
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      margin: 0

  &__content
    align-self: center
    //display: flex
    max-width: 480px

  &__title
    margin-bottom: 45px
    @media (max-width: $breakpoint-sm)
      text-align: center
      margin-bottom: 35px

  &__text
    line-height: 21px
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      line-height: 19px
      margin-bottom: 35px
      text-align: center

  &__aside
    width: 380px
    margin-left: auto
    @media (max-width: $breakpoint-sm)
      width: 100%

  &__item
    height: 312px
    padding: 0
    background-image: none
    @media (max-width: $breakpoint-sm)
      height: auto

  &__image
    display: block
    margin: 10px auto 0
    max-width 100%
  //  position: absolute
  //  left: 50%
  //  top: 60px
  //  transform: translate(-50%, -50%)

  &__name
    line-height: 19px
    position: absolute
    bottom: 15px
    font-weight: 500
    padding: 0 20px
    @media (max-width: $breakpoint-sm)
      padding: 10px
      font-size: 9px
      position: static
      text-align: center
