.footer
  background: $black
  padding-top: 73px
  @media (max-width: $breakpoint-sm)
    padding-top: 39px

  &__lg
    @media (max-width: $breakpoint-sm)
      display: none

  &__sm
    display: none
    @media (max-width: $breakpoint-sm)
      display: block

  &__content
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction: column

  &__left
    width: 200px
    display: flex
    flex-direction: column
    @media (max-width: $breakpoint-sm)
      width: 100%
      flex-direction: row
      margin-bottom: 38px

  &__menu
    display: flex
    flex: 1

  &__col-left
    //flex: 1
    width: 300px
    @media (max-width: $breakpoint-sm)
      width: auto
      padding-right: 10px

  &__col-right
    //flex: 2
    max-width 500px;
    margin-right: 20px
    @media (max-width: $breakpoint-sm)
      margin-right: 0
      //flex: 1
      padding-left: 10px

  &__right
    margin-left: auto
    //padding-left: 100px

  &__aside
    margin-top: 36px

  &__logo,
  &__socials
    @media (max-width: $breakpoint-sm)
      flex: 1

  &__contacts
    margin-top: auto
    @media (max-width: $breakpoint-sm)
      margin-top: 37px

  &__button
    display: inline-flex
    width: 36px
    height: 36px
    align-items: center
    justify-content: center
    padding: 0
    margin-right: 10px
    margin-bottom: 10px
    @media (max-width: $breakpoint-sm)
      width: 30px
      height: 30px
    svg
      width: 16px
      height: 16px
      anim()

    &--social
      svg
        fill: $white

    &--contact
      svg
        fill: $white

      &:hover
        svg
          fill: $white

  &__level1
    margin-bottom: 34px
    @media (max-width: $breakpoint-sm )
      margin-bottom: 17px

    a
      color: #ffffff
      font-size: 15px
      font-weight: 500
      background-image: none
      line-height: 1
      @media (max-width: $breakpoint-sm)
        font-size: 13px

      &:hover
        color: $blue

  &__level2
    margin-top: 34px
    margin-bottom: 15px
    @media (max-width: $breakpoint-sm )
      margin-top: 12px
      margin-bottom: 12px

    a
      font-size: 11px
      color: $white
      font-weight: 500
      line-height: 1
      padding-bottom: 2px
      @media (max-width: $breakpoint-sm)
        font-size: 9px

      &:not(:hover)
        background-image: none

      &:hover
        color: $blue

  &__level3
    margin-bottom: 11px
    @media (max-width: $breakpoint-sm )
      margin-bottom: 8px

    a
      color: $white
      font-size: 11px
      line-height: 1.5em
      padding-bottom: 2px
      opacity: .25
      @media (max-width: $breakpoint-sm)
        font-size: 9px

      &:not(:hover)
        background-image: none

      &:hover
        opacity: 1
        color: $blue

  &__socials-header
    font-size: 11px
    margin-top: 35px
    margin-bottom: 18px
    color: $white
    opacity: .25
    @media (max-width: $breakpoint-sm)
      margin-top: 0
      font-size: 9px
      margin-bottom: 8px

  &__sub
    background: #131313
    height: 50px
    margin-top: 80px
    @media (max-width: $breakpoint-sm)
      height: auto
      padding: 19px 0 2px
      margin-top: 27px

  &__sub-inner
    align-items: center
    height: 100%
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction: column

  &__link
    font-size: 11px
    opacity: .25
    color: $white
    margin-right: 30px
    padding-bottom: 0
    background-image: none
    @media (max-width: $breakpoint-sm)
      font-size: 9px
      margin-right: 0
      margin-bottom: 17px

    &:last-child
      margin-right: 0

    //&:not(:hover)
    //  background-image: none

    &:hover
      opacity: 1