.eventForm
  .c: .eventForm__inner
    .eventForm__info
      .eventForm__link Подать заявку на участие в семинаре
      .eventForm__title ВСТРЕЧА ДИРЕКТОРОВ ЧАСТНЫХ МЕДИЦИНСКИХ УЧРЕЖДЕНИЙ
      .eventForm__date
        .eventForm__day 20-21 марта
        |2019 года

    .eventForm__form
      .eventForm__input: .input
        label.input__label Ваше имя
        input.input__input
      .eventForm__input: .input
        label.input__label Ваш e-mail
        input.input__input
      .eventForm__input: .input
        label.input__label Ваш телефон
        input.input__input
      .eventForm__input: .input
        label.input__label Ваш телефон
        select.select
          option(value='1') Онлайн
          option(value='2') Офлайн
      .eventForm__input.eventForm__input--checkbox
        label.checkbox
          input.checkbox__input(type='checkbox')
          .checkbox__text Я согласен(а) на #[a(href='#') обработку персональных данных]

      .eventForm__input
        button.bigBtn ПРИНЯТЬ УЧАСТИЕ

