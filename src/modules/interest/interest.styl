.interest
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &--grey
    background: $grey-bright

  &__title
    margin-bottom: 37px
    text-align: center
    @media (max-width: $breakpoint-sm)
      margin-bottom: 30px

  &__items
    display: flex
    margin: 0 -10px
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      margin: 0

  &__item
    flex: 1
    margin: 0 10px
    @media (max-width: $breakpoint-sm)
      margin: 0 0 15px

  &__slide
    position: relative
    height: 340px
    @media (max-width: $breakpoint-sm)
      height: 220px

    &:hover
      & ^[0]__image
        filter: grayscale(0)

      & ^[0]__text
        color: $white
        background: $blue

  &__image
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-size: cover
    background-position: 50% 50%
    filter: grayscale(100%)
    anim()
    @media (max-width: $breakpoint-sm)
      filter: grayscale(0)

  &__content
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    padding: 28px 31px
    @media (max-width: $breakpoint-sm)
      padding: 20px

  &__text
    font-size: 24px
    display: inline-block
    margin-top: 10px
    padding: 6px 10px 1px
    background: $white
    font-family: 'Bebas Neue Book', sans-serif
    anim()
