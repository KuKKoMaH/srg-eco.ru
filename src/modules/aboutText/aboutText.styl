.aboutText
  padding: 80px 0 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0 0

  &__content
    display: flex
    @media (max-width: $breakpoint-sm)
      flex-direction column

  &__text
    max-width: 680px
    //flex: 2
    line-height: 1.8em
    @media (max-width: $breakpoint-sm)
      font-size: 11px

    p
      margin-bottom: 23px
      @media (max-width: $breakpoint-sm)
        margin-bottom: 20px

      &:last-child
        margin-bottom: 0
        @media (max-width: $breakpoint-sm)
          margin-bottom: 20px

  &__aside
    flex: 1
    position: relative
    min-width: 380px
    margin-left: 20px
    @media (max-width: $breakpoint-sm)
      margin-left: 0
      min-width 0

  &__images
    position: absolute
    bottom: 0
    right: 0
    @media (max-width: $breakpoint-sm)
      position: static

  &__image
    border: 7px solid $grey-middle
    margin-top: 20px
    position: relative
    @media (max-width: $breakpoint-sm)
      margin-top: 15px
      max-width: 100%

    &:first-child
      margin-top: 0

    img
      display: block
      @media (max-width: $breakpoint-sm)
        width: 100%

  &__label
    position: absolute
    color: $white
    background: $blue
    padding: 13px 15px
    left: 0
    bottom: 20px

