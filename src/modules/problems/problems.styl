.problems
  background: #f4f4f4
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 38px 0 40px

  &__title
    text-align: center
    margin-bottom: 43px
    padding: 0 10px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 35px

  &__items
    display: flex
    flex-wrap: wrap
    margin: 0 -10px
    @media (max-width: $breakpoint-sm)
      margin: 0
      flex-direction: column
      flex-wrap: nowrap
      align-items: center

  &__item
    width: 33.333%
    padding: 10px
    @media (max-width: $breakpoint-sm)
      width: 100%
      max-width: 280px
      padding: 0 0 15px

  &__content
    background: $white
    height: 245px
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    border-bottom: 5px solid $grey-dark
    anim()
    @media (max-width: $breakpoint-sm)
      height: 157px
      border-bottom: 5px solid $blue

    &:hover
      border-bottom: 5px solid $blue
      color: $black

  &__image
    display: block
    margin-bottom: 37px

  &__text
    font-size: 15px
    line-height: 1.5em
    text-align: center
    @media (max-width: $breakpoint-sm)
      font-size: 11px