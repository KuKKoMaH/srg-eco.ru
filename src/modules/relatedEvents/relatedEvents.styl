.relatedEvents
  position: relative
  padding: 80px 0
  overflow hidden
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__title
    margin-bottom: 35px
    @media (max-width: $breakpoint-sm)
      text-align: center

  &__link
    display: flex
    justify-content: flex-end
    @media (max-width: $breakpoint-sm)
      justify-content: center
      margin-top: 35px

  &__all
    position: absolute
    top: 80px
    margin-top: 9px
    font-weight: 500
    padding-bottom: 4px
    @media (max-width: $breakpoint-sm)
      position: static
      margin-top: 0

  &__slider
    position: relative

  &__slides
    display: flex;

  &__item
    flex-shrink 0

  &__slide
    height: 430px
    border: 5px solid $grey-dark
    display: flex
    background: none
    padding-bottom: 0
    anim()
    @media (max-width: $breakpoint-sm)
      height: auto
      flex-direction: column

    &:hover
      border: 5px solid $blue
      color: $black

      & ^[0]__header
        color: $blue
        border-bottom: 1px solid $blue

      & ^[0]__register
        color: $blue

  &__image
    flex: 1
    height: 100%
    background-size: cover
    background-position: 50% 50%
    @media (max-width: $breakpoint-sm)
      height: 198px

  &__header
    display: inline
    border-bottom: 1px solid transparent
    line-height: 35px
    anim()
    @media (max-width: $breakpoint-sm)
      margin-bottom: 18px

  &__content
    flex: 1
    display: flex
    padding: 40px 20px 40px 40px
    flex-direction: column
    justify-content: space-between
    align-items: flex-start
    @media (max-width: $breakpoint-sm)
      padding: 28px

  &__text
    line-height: 1.55
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      line-height: 19px
      margin-bottom: 12px

  &__register
    font-weight: 500

    svg
      width: 13px
      height: 9px
      fill: $blue
      margin-left: 4px

  &__controls
    display: flex
    justify-content: flex-end
    @media (max-width: $breakpoint-sm)
      justify-content: center

  &__controls-inner
    position: absolute
    bottom: 36px
    padding-right: 36px
    display: flex
    //width: 55px
    justify-content: space-between
    @media (max-width: $breakpoint-sm)
      bottom: 28px
      padding-right: 0

  &__arrow
    display: block
    opacity: .5
    anim()

    &:hover
      opacity: 1

    &--left
      transform: rotate(180deg)
      margin-right: 13px

    svg
      display: block
      width: 20px
      height: 14px
      fill: $white
