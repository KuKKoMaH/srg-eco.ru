.eventHead
  min-height 415px
  padding: 30px 0
  position: relative
  background-size: cover
  background-position: 50% 50%
  color: #ffffff
  display: flex;
  align-items center
  @media (max-width: $breakpoint-sm)
    padding: 55px 0 0px
    min-height: 0
    margin-bottom: -20px

  &:before,
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%

  &:before
    background: url('data:image/gif;base64,R0lGODlhDAAMAPABAP///wAAACH5BAUAAAEALAAAAAAMAAwAAAILRI6py+0Po5y0sgIAOw==')
    opacity: .25
    @media (max-width: $breakpoint-sm)
      opacity: .5

  &:after
    background: linear-gradient(to right, rgba($black, 1) 0%, rgba($black, 0) 100%)
    opacity: .5
    @media (max-width: $breakpoint-sm)
      background: #282828 linear-gradient(to top, rgba($black, 1) 0%, rgba($black, 0) 100%)

  &__row
    position: relative;
    z-index: 1
    display: flex;
    padding-right: 95px
    align-items flex-start
    @media (max-width: $breakpoint-md)
      padding-right: 10px
    @media (max-width: $breakpoint-sm)
      flex-direction column
      padding-right: 20px

  &__breadcrumbs
    margin-bottom: 40px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 20px

  &__label
    font-size: 18px
    margin-bottom: 10px
    @media (max-width: $breakpoint-sm)
      font-size: 13px

  &__title
    font-size: 50px
    line-height: 1.2em
    @media (max-width: $breakpoint-sm)
      font-size: 33px

  &__aside
    width: 320px
    flex-shrink 0
    margin-left: 100px
    background: #eeeeee
    padding: 35px
    @media (max-width: $breakpoint-md)
      margin-left: 20px
    @media (max-width: $breakpoint-sm)
      margin-left: 0
      margin-top: 60px
      margin-bottom: -55px
      width: 100%

  &__item
    color: #000;
    font-size: 14px
    margin-bottom: 20px

  &__icon
    margin-right: 12px
    display: inline-block;
    vertical-align: middle;

    img
      width: 100%
      max-width 24px
      max-height 24px
      height: auto;

    svg
      fill: #00b2e0;
      width: 24px
      height: 24px

  &__action
    margin-top: 25px
    @media (max-width: $breakpoint-sm)
      margin-top: 20px
