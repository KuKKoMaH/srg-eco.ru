.eventHead
  height: 485px

  position: relative
  background-size: cover
  background-position: 50% 50%
  padding-bottom: 140px
  color: #ffffff
  @media (max-width: $breakpoint-sm)
    height: 385px
    padding-bottom: 160px

  &:before,
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%

  &:before
    background: url('data:image/gif;base64,R0lGODlhDAAMAPABAP///wAAACH5BAUAAAEALAAAAAAMAAwAAAILRI6py+0Po5y0sgIAOw==')
    opacity: .25
    @media (max-width: $breakpoint-sm)
      opacity: .5

  &:after
    background: linear-gradient(to right, rgba($black, 1) 0%, rgba($black, 0) 100%)
    opacity: .5
    @media (max-width: $breakpoint-sm)
      background: #282828 linear-gradient(to top, rgba($black, 1) 0%, rgba($black, 0) 100%)

  &__inner
    position: relative
    z-index: 1
    padding-top: 100px
    max-width: 680px
    @media (max-width: $breakpoint-sm)
      padding-top: 50px

  &__breadcrumbs
    margin-bottom: 40px

  &__head
    display: flex
    align-items: flex-start
    @media (max-width: $breakpoint-sm)
      flex-direction: column
      align-items: center

  &__label
    color: #fff
    background: $blue
    padding: 5px 8px
    margin-bottom: 12px

  &__content
    margin-left: 25px
    @media (max-width: $breakpoint-sm)
      margin-left: 0

  &__title
    font-size: 50px
    line-height: 1.2em
    margin-bottom: 25px
    @media (max-width: $breakpoint-sm)
      font-size: 25px
      text-align: center
      margin-bottom: 5px

  &__date
    font-size: 15px
    @media (max-width: $breakpoint-sm)
      text-align: center
      font-size: 11px