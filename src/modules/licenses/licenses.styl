.licenses
  background: $grey-bright
  border-top: 1px solid $grey-middle
  padding: 80px 0
  position: relative
  margin-top: 55px
  @media (max-width: $breakpoint-sm)
    padding: 40px 0
    margin-top: 33px

  &__item
    height: 100%
    padding: 0
    background-image: none
    min-height: 312px
    display: flex
    flex-direction column
    //@media (max-width: $breakpoint-sm)
    //  height: auto

  &__image
    display: flex
    margin: 10px auto 0
    max-width 90%
    min-height 220px
    align-items center
    justify-content center

    img
      max-width 100%
  //  position: absolute
  //  left: 50%
  //  top: 60px
  //  transform: translate(-50%, -50%)

  &__text
    line-height: 1.8em
    //position: absolute
    bottom: 15px
    font-weight: 500
    padding: 10px 20px
    @media (max-width: $breakpoint-sm)
      padding: 10px
      font-size: 9px
      position: static

  &__link
    text-align: center
    font-weight: 500
    margin-top: 45px