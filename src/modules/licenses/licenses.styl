.licenses

  &__content
    position: relative;

  &__slider
    overflow: hidden;

  &__slides
    display: flex;
    align-items justify

  &__slide
    flex-shrink 0
    width: 33.3333%
    padding: 0 10px

  &__item
    max-width 300px
    display: block;
    margin: 0 auto
    border: 5px solid #EEEEEE;
    padding: 10px
    background: 0

  &__image {
    height: 220px
    display: flex;
    align-items center
    justify-content center

    img {
      max-width 100%
      max-height 100%
    }
  }

  &__text {
    text-align: center;
    font-size: 12px;
    line-height: 1.6
    color: #444444;
    padding-top: 10px
  }
