.advantages
  background: $grey-bright
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__title
    text-align: center
    margin-bottom: 50px

  &__item
    height: 215px
    @media (max-width: $breakpoint-sm)
      width: 100%
      height: 138px
      padding: 0

    .card__inner
      background: $white

  &__image
    height: 130px
    display: flex
    align-items: center
    justify-content: center
    @media (max-width: $breakpoint-sm)
      height: 100px

  &__text
    text-align: center
    line-height: 1.5em
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      br
        display: none