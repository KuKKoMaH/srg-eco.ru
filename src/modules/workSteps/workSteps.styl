.workSteps
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__title
    text-align: center
    margin-bottom: 50px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 40px

  &__items
    display: flex
    flex-wrap: wrap
    @media (max-width: $breakpoint-sm)
      flex-direction: column

  &__item
    width: 25%
    padding-right: 50px
    margin-bottom: 20px
    @media (max-width: $breakpoint-sm)
      width: 100%
      padding-right: 0
      text-align: center
      margin-bottom: 35px

    &:hover
      & ^[0]__step
        border-color: $blue
        &:after
          height: 7px
          background: $blue

  &__step
    position: relative
    width: 80px
    height: 80px
    border: 7px solid $grey-middle
    display: flex
    align-items: center
    justify-content center
    font-family: 'Bebas Neue', sans-serif;
    font-size: 25px
    padding-top: 7px
    margin-bottom: 23px
    anim()
    @media (max-width: $breakpoint-sm)
      margin: 0 auto 15px

    &:after
      content: ''
      position: absolute
      left: 100%
      top: 37px
      width: 100%
      height: 0
      background: $grey-middle
      anim()
      @media (max-width: $breakpoint-sm)
        display: none

  &__name
    font-size: 15px
    line-height: 21px
    border-bottom: 1px solid $blue
    display: inline-block
    margin-bottom: 20px
    @media (max-width: $breakpoint-sm)
      font-size: 13px

  &__text
    font-size: 13px
    line-height: 21px
    @media (max-width: $breakpoint-sm)
      font-size: 11px
