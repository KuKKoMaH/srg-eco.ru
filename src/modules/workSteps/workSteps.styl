.workSteps
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__title
    text-align: center
    margin-bottom: 50px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 40px

  &__items
    display: flex
    //flex-wrap: wrap
    @media (max-width: $breakpoint-md)
      flex-direction: column

    &--reverse
      flex-direction row-reverse
      @media (max-width: $breakpoint-md)
        flex-direction: column

    &:last-child
      margin-bottom: -75px
      @media (max-width: $breakpoint-md)
        margin-bottom: 0

  &__item
    width: 25%
    padding-right: 50px
    margin-bottom: 75px
    @media (max-width: $breakpoint-md)
      width: 100%
      padding-right: 0
      text-align: center
      margin-bottom: 35px
      display: flex;
      align-items flex-start

    &:hover
      & ^[0]__step
        border-color: $blue
        background: $blue
        color: #ffffff

  &__step
    flex-shrink 0
    position: relative
    width: 80px
    height: 80px
    border: 7px solid $grey-middle
    display: flex
    align-items: center
    justify-content center
    font-family: 'Bebas Neue', sans-serif;
    font-size: 25px
    padding-top: 7px
    margin-bottom: 23px
    anim()
    @media (max-width: $breakpoint-md)
      margin: 0
      width: 60px
      height: 60px

  &__content
    @media (max-width: $breakpoint-md)
      text-align: left;
      margin-left: 15px

  &__name
    display: inline;
    font-size: 15px
    line-height: 1.5em
    border-bottom: 1px solid $blue
    //display: inline-block
    @media (max-width: $breakpoint-sm)
      font-size: 13px

  &__text
    margin-top: 20px
    font-size: 13px
    line-height: 1.6em
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      margin-top: 12px
