.workSteps
  padding: 80px 0
  @media (max-width: $breakpoint-sm)
    padding: 40px 0

  &__title
    text-align: center
    margin-bottom: 50px
    @media (max-width: $breakpoint-sm)
      margin-bottom: 40px

  &__items
    display: flex
    //flex-wrap: wrap
    @media (max-width: $breakpoint-md)
      flex-direction: column

    &--reverse
      flex-direction row-reverse
      @media (max-width: $breakpoint-md)
        flex-direction: column

      & ^[0]__name
        &:before
          left: auto;
          right: 100%
          width: 50px

        svg
          transform rotate(180deg)
          right: 100%
          margin-right: 45px

      & ^[0]__item
        &:hover
          & ^[0]__name
            &:before
              width: 50px

            svg
              right: 100%
              margin-right: 45px

        &:last-child
          & ^[0]__name
            &:after
              right: auto;
              left: -50px;
              border-right: 0
              border-left: 1px solid $blue;

            svg
              transform rotate(0)
              right: auto;
              left: -20px


    &:last-child
      margin-bottom: -75px
      @media (max-width: $breakpoint-md)
        margin-bottom: 0

  &__item
    width: 25%
    padding-right: 50px
    margin-bottom: 75px
    position: relative;

    &--last
      & ^[0]__name
        &:before, &:after, svg
          display: none;

    &:last-child
      & ^[0]__name
        &:after
          content: ''
          position: absolute;
          right: 0
          background: transparent
          border: 1px solid  $blue;
          border-left: 0
          width: 35px
          height: calc(100% + 76px)
          top: 123px

        svg
          transform rotate(180deg)
          top: calc(100% + 194px)
          right: 30px

    @media (max-width: $breakpoint-md)
      width: 100%
      padding-right: 0
      text-align: center
      margin-bottom: 35px
      display: flex;
      align-items flex-start

    &:hover
      & ^[0]__step
        border-color: $blue
        background: $blue
        color: #ffffff

      & ^[0]__name
        &:before, &:after, svg
          opacity: 1

  &__step
    background: #ffffff
    flex-shrink 0
    position: relative
    width: 80px
    height: 80px
    border: 7px solid $grey-middle
    display: flex
    align-items: center
    justify-content center
    font-family: 'Bebas Neue', sans-serif;
    font-size: 25px
    padding-top: 7px
    margin-bottom: 23px
    anim()
    @media (max-width: $breakpoint-md)
      margin: 0
      width: 60px
      height: 60px

  &__content
    @media (max-width: $breakpoint-md)
      text-align: left;
      margin-left: 15px

  &__name
    display: inline;
    font-size: 15px
    line-height: 1.5em
    border-bottom: 1px solid $blue

    &:before, &:after, svg
      opacity: 0
      anim(.2s)
      @media (max-width: $breakpoint-md)
        display: none;

    &:before
      content: ''
      display: block;
      position: absolute;
      height: 1px
      left: 0
      width: calc(100% - 20px);
      background: $blue
      top: 123px

    svg
      fill $blue
      width: 17px
      height: 9px
      position: absolute;
      right: 15px
      top: 119px
      pointer-events none

    @media (max-width: $breakpoint-sm)
      font-size: 13px

  &__text
    margin-top: 20px
    font-size: 13px
    line-height: 1.6em
    @media (max-width: $breakpoint-sm)
      font-size: 11px
      margin-top: 12px
