.cookies
  position: fixed;
  bottom: 0
  left: 0
  width: 100%
  background: #747474
  min-height: 58px
  padding: 15px 70px 15px 20px
  color: #ffffff
  text-align: center;
  display: flex;
  align-items center
  justify-content center
  transform translateY(100%)
  anim()

  &__active
    transform none

  &__button
    width: 33px
    height: 33px
    border-radius: 50%
    border: 1px solid #00B2E0;
    display: flex;
    align-items center
    justify-content center
    margin-left: 20px
    flex-shrink 0

