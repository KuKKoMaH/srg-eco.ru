.search
  +crit('header.css')
    &
      display: none
  & // хак
    display: block;

  &:before
    content: ''
    display: none
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0, 0, 0, .5)
    opacity: 0
    z-index: 1
    anim()

  &--active
    &:before
      display: block

    .search__content
      display: block

  &--visible
    &:before
      opacity: 1

    .search__content
      opacity: 1
      transform: translateY(0)

  &--static &
    &__content
      display: block;
      position: relative;
      opacity: 1
      width: 100%
      transform: none
      top: 0

  .c
    height: 100%
    position: relative;

  &__content
    display: none
    position: absolute
    top: 100%
    left: 0
    width: 100%
    background: $blue
    transform: translateY(-20px)
    opacity: 0
    z-index: 3
    anim()
    @media (max-width: $breakpoint-sm)
      top: 60px

  &__trigger
    +crit('header.css')
      &
        margin-left: 30px
        width: 20px
        height: 20px
        min-width: 20px
        position: relative
        @media (max-width: $breakpoint-sm)
          margin-left: 0

        &:hover
          svg
            fill: $blue

    &:after
      content: ''
      position: absolute
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 0 11px 12px 11px;
      border-color: transparent transparent #49b2cb transparent
      bottom: -45px
      left: 50%
      margin-left: -11px
      opacity: 0
      pointer-events: none
      transform: translateY(12px)
      anim()
      @media (max-width: $breakpoint-sm)
        display: none

    +crit('header.css')
      svg
        display: block
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        anim()

    &--active
      & ^[0]__open
        opacity: 0

      & ^[0]__close
        opacity: 1

      &:after
        opacity: 1
        transform: translateY(0px)

  &__open
    opacity: 1

  +crit('header.css')
    &__close
      opacity: 0

  &__input
    display: block
    width: 100%
    font-size: 15px
    line-height: 1
    padding: 36px 0 35px
    font-weight: 400
    color: #ffffff
    @media (max-width: $breakpoint-sm)
      padding: 21px 20px 20px

    &::-webkit-input-placeholder {
      color: #fff;
    }

    &::-moz-placeholder {
      color: #fff;
    }

    &:-moz-placeholder {
      color: #fff;
    }

    &:-ms-input-placeholder {
      color: #fff;
    }

  &__button
    position: absolute
    right: 40px
    top: 50%
    width: 20px
    height: 20px
    margin-top: -10px

    svg
      width: 100%
      height: 100%
      top: 0
      left: 0
      fill: $white
