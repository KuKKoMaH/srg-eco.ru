.header
  ul
    padding: 0
    margin: 0
    li
      &:before
        display none

  &__placeholder
    height: 110px
    @media (max-width: $breakpoint-sm)
      height: 100px

  &__container
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 110px
    padding: 0 30px
    display: flex
    align-items: center
    z-index: 3
    background: #ffffff
    box-shadow: 0 5px 20px rgba(#000, .1)

    @media (max-width: $breakpoint-sm)
      height: 60px
      padding: 0 20px

